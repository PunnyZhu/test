/* 页面 */
page {
background:#f3f2f7;
font-size:16px;
color:#999;
}
/* 轮播图 */
.swiper-class{
height: 200px;
width:100%;
}
.slide-image{
  height: 200px;
  width:100%;
}
/* 资讯导航 */
.headnav{
  margin:10px 0px;
  height: 85px;
  width: 100%;
  background: #fff;
  flex-direction: row;
  justify-content:  space-around;
}
.headnav-item{
  height: 85px;
  width: 55px;
  flex-direction: column;
  justify-content: center;
}
.headnav-top{
  height: 55px;
  width: 55px;
}
.headnav-img{
  height: 55px;
  width: 55px;
}
.headnav-bottom{
  height: 18px;
  width: 55px;
}
.headnav-text{
  height: 18px;
  width: 55px;
  font-size:13px;
}
/* 资讯消息 */
.info-title{
  height: 30px;
  width: 100%;
  padding-left: 10px;
  background: #D7D7D7;
  border-left:4px solid #5E5E5E;
  line-height: 30px;
}
/* 第一种格式的资讯 */
.info-list-row{
background:#ffffff;
width:100%;
height: 140px;
flex-direction: row;
justify-content:space-between; 
align-items:center;
border-bottom:1px solid #CCCCCC;
}
.info-left{
height: 140px;
width:230px;
flex-direction: column;
margin-left: 10px;
justify-content:space-between; 
}
.info-right{
height: 112px;
width:100px;
margin-right: 10px;
}
.info-img{
height: 100px;
width:112px;
}
.tag{
  margin-top:10px;
  font-size: 14px;
  width: 35px;
  height: 18px;
  line-height: 18px;
  border: 1px solid #FF0000;
  border-radius: 5px;
  color: #FF0000;
}
.bottom-remark{
flex-direction:row;
font-size:10px; 
margin-bottom: 4px;
justify-content:space-between; 
}
.time{
margin-right: 10px;
}
/* 第二种格式的资讯 */
.info-list-col{
background:#ffffff;
width:100%;
height: 100px;
flex-direction: column;
justify-content:space-between; 
border-bottom:1px solid #CCCCCC;
}
.info-top{
  margin: 10px;
}
.info-bottom{
flex-direction:row;
font-size:10px; 
margin:10px;
justify-content:space-between; 
}
.tag-bgred{
  font-size: 12px;
  width: 40px;
  height: 18px;
  line-height: 18px;
  text-align: center;
 background: #FF8585;
  border-radius: 10px;
  color: #fff;
}
/* 第三种格式的资讯 */
.info-list-col-img{
background:#ffffff;
width:100%;
height: 280px;
flex-direction: column;
justify-content:space-between; 
border-bottom:1px solid #CCCCCC;
}
.info-head{
height: 160px;
 align-self:center;
 margin-top: 10px;
}
.info-mid{
margin: 0px 10px;
}
/* 加载更多 */
.hasmore{
  flex-direction: column;
  background: #fff;
  margin: 20px 0px 30px 0px;
  align-items: center;
}
.more-top{
  font-size:15px;
}
.more-bottom{
  flex-direction: row;
}
.btn{
  width:100px;
  height: 30px;
  background: #FF8080;
  color: #fff;
  font-size:16px;
  line-height: 30px;
  margin: 10px 20px;
}